<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="WindowStyle">
        <Setter Property="Control.Background" Value="Black"/>
    </Style>
    <Style x:Key="TextBoxStyle" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="TextBox.Foreground" Value="Wheat"/>
    </Style>
    <Style x:Key="ByttonStyle" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="Button.Foreground" Value="Wheat"/>
        <Setter Property="Button.BorderBrush" Value="Wheat"/>
        <Setter Property="Button.Margin" Value="10"/>
    </Style>
</ResourceDictionary>